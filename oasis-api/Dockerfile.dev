FROM oven/bun:1.1.45-slim

WORKDIR /app

COPY package.json bun.lockb* ./
RUN bun install

# Source files will be mounted as volume for hot reload
COPY . .

# Run as non-root user
RUN addgroup --system oasis && adduser --system --ingroup oasis oasis
USER oasis

ENV PORT=3001
EXPOSE 3001

CMD ["bun", "run", "dev"]
